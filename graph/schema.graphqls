type Category {
  id: ID!
  name: String!
  description: String
  courses: [Courses!]!
}

type Courses {
  id: ID!
  name: String!
  description: String
  category: Category!
}

input NewCategory {
  name: String!
  description: String
}

input NewCouse {
  name: String!
  description: String
  categoryId: ID!
}

type Query {
  categories: [Category!]!
  courses: [Courses!]!
}

type Mutation {
  createCategory(input: NewCategory!): Category!
  createCourse(input: NewCouse!): Courses!
}

